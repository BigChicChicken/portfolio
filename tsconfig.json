{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "src/*": ["*"],
      "components/*": ["components/*"],
      "hocs/*": ["hocs/*"],
      "resources/*": ["resources/*"],
      "services/*": ["services/*"],
      "types/*": ["types/*"],
      "views/*": ["views/*"]
    }
  },
  "include": [
    "src"
  ]
}
